{
    "name": "laravel/lumen",
    "description": "The Laravel Lumen Framework.",
    "keywords": [
        "framework",
        "laravel",
        "lumen"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "8.1.9",
        "guzzlehttp/guzzle": "^7.5",
        "jenssegers/mongodb": "^3.9",
        "laravel/lumen-framework": "^9.0",
        "ext-curl": "*",
        "ext-http": "*"
    },
    "require-dev": {
        "fabpot/goutte": "^4.0",
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.5.10",
        "symfony/dom-crawler": "^6.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit tests",
        "hooks:update": "./vendor/bin/cghooks update",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "extra": {
        "hooks": {
            "config": {
                "stop-on-failure": [
                    "pre-commit"
                ]
            },
            "pre-commit": [
                "set -e",
                "export XDEBUG_MODE=coverage",
                "./vendor/bin/phpunit --stop-on-defect tests",
                "git diff $(git merge-base origin/develop HEAD) > ci_diff.txt",
                "./vendor/bin/diffFilter --phpunit ci_diff.txt ./tests/logs/clover.xml 50",
                "git add ci_diff.txt",
                "git add tests/logs/clover.xml"
            ]
        }
    }
}
